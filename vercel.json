{
  "redirects": [
    {
      "source": "/login",
      "destination": "https://app.dashieapp.com/login",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/beta-signup", "destination": "/beta-signup.html" },
    { "source": "/dashie-lite", "destination": "/dashie-lite.html" },
    { "source": "/voice-license", "destination": "/voice-license.html" },
    { "source": "/voice-license-success", "destination": "/voice-license-success.html" },
    { "source": "/privacy-policy", "destination": "/privacy-policy.html" },
    { "source": "/terms-of-service", "destination": "/terms-of-service.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/wake-word-models/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/wake-word-models/manifest.json",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "no-cache, max-age=0" }
      ]
    }
  ]
}
